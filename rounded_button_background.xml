<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#3399FF">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E88E5" /> <!-- Solid Blue Background -->
            <corners android:radius="16dp" /> <!-- Rounded Corners -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
            <size
                android:width="0dp"
                android:height="48dp" />
        </shape>
    </item>

</ripple>
