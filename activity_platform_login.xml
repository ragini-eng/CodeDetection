<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bgwrapper"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Platform Icon -->
        <ImageView
            android:id="@+id/platformIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_bg"
            android:padding="16dp"
            android:src="@drawable/ic_placeholder" />

        <!-- Platform Title -->
        <TextView
            android:id="@+id/platformTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform Login"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Username / URL Input -->
        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter username or profile URL"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Analyze Button -->
        <Button
            android:id="@+id/analyzeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Analyze"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Upload Screenshot (disabled for now) -->
        <Button
            android:id="@+id/btnUploadScreenshot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Screenshot (Coming Soon)"
            android:backgroundTint="#555555"
            android:textColor="#CCCCCC"
            android:enabled="false"
            android:alpha="0.5"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
