<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bgwrapper"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a Platform"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Grid Layout 2x2 full screen responsive -->
        <GridLayout
            android:id="@+id/platformGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Instagram -->
            <LinearLayout
                android:id="@+id/cardInstagram"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_instagram"
                    android:background="@drawable/btn_circle_instagram"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Facebook -->
            <LinearLayout
                android:id="@+id/cardFacebook"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_facebook"
                    android:background="@drawable/btn_circle_facebook"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Twitter -->
            <LinearLayout
                android:id="@+id/cardTwitter"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_twitter"
                    android:background="@drawable/btn_circle_twitter"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitter"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- LinkedIn -->
            <LinearLayout
                android:id="@+id/cardLinkedIn"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_linkedin"
                    android:background="@drawable/btn_circle_linkedin"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LinkedIn"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
