<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#14000000" /> <!-- Light shadow -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main Card with Blue Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E0F7FA"
                android:endColor="#B3E5FC"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#81D4FA" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
